{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "supertest"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "../tests/**/*"]
}
