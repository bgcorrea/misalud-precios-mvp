{
  "name": "misalud-precios-mvp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "tsx src/server.ts",
    "test": "jest --runInBand",
    "lint": "tsc --noEmit",
    "api:validate": "swagger-cli validate ../docs/openapi.yaml"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "nanoid": "^4.0.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.11",
    "@types/supertest": "^2.0.16",
    "@types/yargs": "^17.0.32",
    "jest": "^30.2.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.4.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/../tests"
    ],
    "modulePaths": [
      "<rootDir>/node_modules"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "./tsconfig.jest.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
